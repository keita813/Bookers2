
<%= render 'users/side',user: @user, book: @book %>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
				<td>
					<%= link_to book.title, book_path(book) %>
				</td>
				<td>
					<%= book.body %>
				</td>
				<% if book.user == current_user %>
				<td>
			    	<%= link_to "Edit", edit_book_path(book.id) %>
			    </td>
		    	<td>
		    		<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
	    		</td>
			    <% end %>
			</tr>
			<% end %>
		</tbody>
    </table>
</div>